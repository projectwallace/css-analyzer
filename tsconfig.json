{
	"compilerOptions": {
		// Base options:
		"skipLibCheck": true,
		"target": "es2022",
		"verbatimModuleSyntax": true,
		"allowJs": false,
		"moduleDetection": "force",
		// Strictness
		"strict": true,
		"noUncheckedIndexedAccess": true,
		// Type checking, not transpiling
		"module": "ESNext",
		"moduleResolution": "bundler",
		"allowSyntheticDefaultImports": true,
		"noEmit": true,
		// Code runs in the DOM
		"lib": [
			"ES2022",
			"DOM",
			"DOM.Iterable"
		],
	},
	"include": [
		"src/index-new.ts"
	],
	"exclude": [
		"node_modules"
	]
}